{
  "name": "dex-arbitrage",
  "version": "0.0.1",
  "description": "Another flash-loan arbitrage bot",
  "type": "module",
  "directories": {
    "test": "tests",
    "src": "src",
    "dist": "dist"
  },
  "scripts": {
    "build": "tsc",
    "start": "node --trace-warnings dist/src/start.js",
    "clear": "rm -rf dist",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:ui": "vitest --ui",
    "createAccount": "ts-node scripts/createAccount.ts",
    "runNode": "npx hardhat node",
    "compile": "npx hardhat compile",
    "deployMainnet": "npx hardhat ignition deploy ignition/modules/aflab_mainnet.ts --network bsc",
    "deployTestnet": "npx hardhat ignition deploy ignition/modules/aflab_testnet.ts --network sepolia",
    "getContractBalance": "ts-node scripts/getContractBalance.ts 0xff00008c249140fA7E02480349C4660Fbb41681e",
    "sendBNBToContract": "ts-node scripts/sendBNBToContract.ts 0xff00008c249140fA7E02480349C4660Fbb41681e 0.01"
  },
  "author": "Jorge Haddad",
  "license": "MIT",
  "devDependencies": {
    "@aave/core-v3": "1.19.3",
    "@nomicfoundation/hardhat-ignition-ethers": "^0.15.7",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.12",
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.12",
    "@openzeppelin/contracts": "5.1.0",
    "@pancakeswap/v3-core": "^1.0.2",
    "@pancakeswap/v3-periphery": "^1.0.2",
    "@quicknode/sdk": "^2.3.0",
    "@types/node": "^20.17.6",
    "@vitest/ui": "^2.1.5",
    "@vitest/coverage-v8": "^2.1.5",
    "dotenv": "^16.4.5",
    "ethers": "^6.13.4",
    "hardhat": "^2.22.15",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3",
    "vitest": "^2.1.5"
  },
  "dependencies": {
    "graffle": "^8.0.0-next.133",
    "graphql": "^16.9.0",
    "ws": "^8.18.0"
  }
}
